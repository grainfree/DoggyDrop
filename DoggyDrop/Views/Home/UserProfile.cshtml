@model DoggyDrop.ViewModels.UserProfileViewModel
@{
    ViewData["Title"] = "Moj profil";
}

<style>
    .profile-container {
        max-width: 500px;
        margin: 0 auto;
        padding: 20px;
        background-color: #fefefe;
        border-radius: 12px;
        box-shadow: 0 4px 6px rgba(0,0,0,0.1);
        margin-top: 20px;
    }

    .profile-pic {
        width: 100px;
        height: 100px;
        object-fit: cover;
        border-radius: 50%;
        margin-bottom: 10px;
    }

    .badge {
        display: inline-block;
        margin: 4px;
        padding: 6px 12px;
        border-radius: 20px;
        font-size: 14px;
        background-color: #FFA447;
        color: white;
    }

    .btn-profile-link {
        display: block;
        width: 100%;
        margin-top: 10px;
        padding: 12px;
        font-size: 16px;
        background-color: #425F57;
        color: white;
        border: none;
        border-radius: 8px;
        text-align: center;
        text-decoration: none;
    }

        .btn-profile-link:hover {
            background-color: #3a4e48;
        }
</style>

<div class="profile-container text-center">
    <h2>👤 Moj profil</h2>

    @if (!string.IsNullOrEmpty(Model.ProfileImageUrl))
    {
        <img src="@Model.ProfileImageUrl" alt="Profilna slika" class="profile-pic" />
    }
    else
    {
        <div class="profile-pic bg-secondary d-inline-block"></div>
    }

    <p class="fw-bold mb-1">@Model.Email</p>
    <p class="mb-3">Dodanih košev: <strong>@Model.TotalBins</strong></p>

    <h5 class="mt-4 mb-2">🎖️ Značke</h5>
    @if (Model.Badges.Any())
    {
        @foreach (var badge in Model.Badges)
        {
            <span class="badge">@badge</span>
        }
    }
    else
    {
        <p>Zaenkrat še nimaš značk.</p>
    }

    <a href="/Map/MyBins" class="btn-profile-link">📍 Moje lokacije</a>
    <a href="#" class="btn-profile-link">👥 Povabi prijatelja</a>
</div>
