@using Microsoft.AspNetCore.Identity
@model DoggyDrop.ViewModels.UserProfileViewModel

@{
    ViewData["Title"] = "Moj profil";
}

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success text-center mt-3">
        @TempData["SuccessMessage"]
    </div>
}
@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger text-center mt-3">
        @TempData["ErrorMessage"]
    </div>
}

<h2 class="text-center mb-4">👤 Moj profil</h2>

<div class="text-center mb-4">
    @if (!string.IsNullOrEmpty(Model.ProfileImageUrl))
    {
        <img src="@Model.ProfileImageUrl" alt="Profilna slika" class="rounded-circle" style="width: 120px; height: 120px; object-fit: cover;" />
    }
    else
    {
        <div class="rounded-circle bg-secondary d-inline-block" style="width: 120px; height: 120px;"></div>
    }

    <form asp-action="UploadProfileImage" method="post" enctype="multipart/form-data" class="mt-2 text-center">
        <div class="input-group w-auto mx-auto">
            <input type="file" name="profileImage" class="form-control" accept="image/*" required />
            <button type="submit" class="btn btn-primary">Naloži</button>
        </div>
    </form>
</div>

<div class="card p-4 shadow-sm">
    <p><strong>Email:</strong> @Model.Email</p>
    <p><strong>Dodanih košev:</strong> @Model.TotalBins</p>

    <h4 class="mt-4">🎖️ Značke</h4>
    @if (Model.Badges.Any())
    {
        <ul class="list-inline">
            @foreach (var badge in Model.Badges)
            {
                <li class="list-inline-item badge bg-success me-2">@badge</li>
            }
        </ul>
    }
    else
    {
        <p>Zaenkrat še nimaš značk.</p>
    }

    <div class="mt-4">
        <a class="btn btn-outline-primary me-2" asp-controller="Map" asp-action="MyBins">📍 Moje lokacije</a>
        <a class="btn btn-outline-success" href="#">👥 Povabi prijatelja</a>
    </div>
</div>

@section Scripts {
    <script>
        document.querySelector('form')?.addEventListener('submit', function () {
            console.log("✔️ Obrazec se pošilja");
        });
    </script>
}
