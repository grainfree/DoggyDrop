@using Microsoft.AspNetCore.Identity
@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager

@{
    var userName = User.Identity?.Name;
}

<!DOCTYPE html>
<html lang="sl">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - DoggyDrop</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/DoggyDrop.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-light bg-white border-bottom shadow-sm">
            <div class="container-fluid">
                <a class="navbar-brand d-flex align-items-center" asp-area="" asp-controller="Map" asp-action="Index">
                    <img src="~/images/logo_transparent.png" alt="DoggyDrop logo" style="height: 36px;" class="me-2" />
                    <span class="fw-bold text-dark">DoggyDrop</span>
                </a>

                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#mainNavbar"
                        aria-controls="mainNavbar" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="collapse navbar-collapse" id="mainNavbar">
                    <ul class="navbar-nav me-auto mb-2 mb-sm-0">
                        @if (SignInManager.IsSignedIn(User))
                        {
                            <li class="nav-item">
                                <a class="nav-link" asp-controller="Map" asp-action="MyBins">📋 Moji predlogi</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" asp-controller="Home" asp-action="UserProfile">👤 Moj profil</a>
                            </li>
                        }

                        @if (User.Identity.IsAuthenticated && User.IsInRole("Admin"))
                        {
                            <li class="nav-item">
                                <a class="nav-link" asp-controller="Map" asp-action="Manage">🛠 Upravljanje predlogov</a>
                            </li>
                        }
                    </ul>

                    <div class="d-flex align-items-center">
                        @if (SignInManager.IsSignedIn(User))
                        {
                            <span class="navbar-text me-3">
                                Pozdravljen, @userName!
                            </span>
                            <form class="d-inline" asp-area="Identity" asp-page="/Account/Logout" method="post" id="logoutForm">
                                <button type="submit" class="btn btn-outline-danger btn-sm">Odjava</button>
                            </form>
                        }
                        else
                        {
                            <a class="btn btn-outline-primary btn-sm me-2" asp-area="Identity" asp-page="/Account/Login">Prijava</a>
                            <a class="btn btn-outline-success btn-sm" asp-area="Identity" asp-page="/Account/Register">Registracija</a>
                        }
                    </div>
                </div>
            </div>
        </nav>
    </header>

    <div class="container-fluid">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted mt-3">
        <div class="container text-center">
            &copy; 2025 - DoggyDrop | <a asp-area="" asp-controller="Home" asp-action="Privacy">Zasebnost</a>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
